@model StudentVM

<form asp-controller="Student" asp-action="Add" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <label asp-for="Lastname"></label>
    <input asp-for="Lastname" class="form-control" />
    <span asp-validation-for="Lastname" class="text-danger"></span>
    <br />
    <label asp-for="Firstname"></label>
    <input asp-for="Firstname" class="form-control" />
    <span asp-validation-for="Firstname" class="text-danger"></span>
    <br />
    <label asp-for="AdmissionDate"></label>
    <input asp-for="AdmissionDate" class="form-control" />
    <span asp-validation-for="AdmissionDate" class="text-danger"></span>
    <br />
    <a asp-controller="Student" asp-action="Index"
        class="btn btn-secondary">
        Back
    </a>
    <button type="submit" class="btn btn-success">
        Create Student
    </button>
</form>


